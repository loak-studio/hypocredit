---
import { getTeam } from "../../api/get-team";
import Dots from "../atoms/Dots.astro";
import TeamMember from "../atoms/TeamMember.astro";
const team = await getTeam();
---

<section class="team">
    <h2 class="team__title h2">Notre Ã©quipe</h2>
    <div class="team__dots rellax" data-rellax-speed="2" data-rellax-percentage="0.5">
        <Dots />
    </div>
    <div class="team__container">
        {team.map((member) => <TeamMember member={member.attributes} />)}
    </div>
</section>

<style define:vars={{ 
        quantity: team.length
        }}>
    .team {
        display: flex;
        margin: 5rem auto;
        width: fit-content;
        align-items: center;
        flex-direction: column;
        position: relative;
        padding: 1rem;
    }
    .team__dots {
        position: absolute;
        left: -331px;
        top: -50px;
    }
    .team__title {
        margin-bottom: 3rem;
    }
    .team__container {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 1rem;
    }
    @media screen and (min-width: 1000px) {
        .team{
            margin: 10rem auto;
        }
        .team__container {
            grid-template-columns: repeat(var(--quantity), minmax(0, 1fr));
            gap: 70px;
        }
    }
</style>
