---
import Button from "../atoms/Button.astro";
import HeroCardCredit from "../atoms/HeroCardCredit.astro";
import HeroCardInsurance from "../atoms/HeroCardInsurance.astro";
---

<section class="hero">
    <div class="hero__container">
        <h1 class="h1 hero__title">
            Des solutions de <span class="highlighted--insurance">crédits</span>
            et d'<span class="highlighted--insurance">assurances</span> sur mesure
        </h1>
        <p class="text">
            Nous sommes un bureau d'assurances et de crédits indépendant qui
            recherche la solution la plus avantageuse pour vos projets.
        </p>
        <div class="hero__buttons">
            <Button>Nos services</Button>
            <Button light={true}>Mieux nous connaitre</Button>
        </div>
    </div>
    <div class="hero__cards">
        <HeroCardCredit />
        <HeroCardInsurance />
    </div>
</section>

<style>
    .hero {
        width: 100%;
        margin: 0 auto;
        background: var(--background);
        margin: 0 auto 5rem auto;
        position: relative;
        padding:3rem 1rem;
    }
    .hero__container {
        width: 100%;
    }
    .hero__container > * + * {
        margin-top: 25px;
    }
    .hero__buttons {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }
    .hero__cards {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
        margin-top: 2rem;
    }
    @media screen and (min-width:809px){
        .hero{
            padding:2rem;

        margin: 0 auto 10rem auto;
        }
    .hero__cards {
        margin-top: 3rem;
            flex-direction: row;
            gap: 45px;
    }
    .hero__container{

        max-width: 527px;
    }
    .hero__buttons{
        flex-direction: row;
    }
    }
    @media screen and (min-width: 1000px) {
        .hero {
            max-width: 1260px;
            padding: 200px 80px;
            min-height: 725px;
        }
        .hero__cards {
            display: flex;
            position: absolute;
            align-items: flex-start;
            bottom: -20px;
            gap: 45px;
            margin-top: 0;
        }
    }
</style>
